---
import Navigation from "./Navigation.astro";
import ThemeIcon from "../ui/ThemeIcon.astro";
import Social from "../ui/Social.astro";
import LoginButton from "../ui/LoginButton.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const { github, githubIconName } = staticData.data;

const navItems = ["features", "how-it-works", "blog"]
---

<header
  role="banner"
  aria-label="Main navigation"
  class="sticky top-0 z-50 w-full p-4 font-medium text-blacktext dark:text-sand-300 dark:bg-[#1a1511]/80 dark:border-b dark:border-sand-900 bg-sand-50/90 backdrop-blur-xs dark:backdrop-blur-xs max-md:z-50 max-md:px-0 transition-all"
>
  <div
    class="relative mx-auto flex max-w-7xl flex-row items-center justify-between max-xl:px-6"
  >
    <a href="/" aria-label="Go to Collective Social home" class="flex items-center gap-2">
      <Icon
        name="basket"
        class="w-6 h-6 text-copper-500 dark:invert"
        aria-hidden="true"
      />
      <span class="text-copper-500 dark:text-white font-bold text-xl">Collective</span>
    </a>

    <Navigation items={navItems} />

    <div class="flex items-center justify-between gap-5 text-xl">
      <div
        class="max-md:hidden flex items-center justify-center gap-5"
        role="group"
        aria-label="External links"
      >
        <Social link={github} iconName={githubIconName} label="Visit Collective Social on GitHub" />
      </div>
    </div>
    <div class="flex items-center gap-4 text-xl md:pl-5">
      <div class="max-md:hidden">
        <LoginButton />
      </div>
      <ThemeIcon />
      <button
        class="hamburger"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <Icon name="bars" class="hamburger-icon bars-icon" aria-hidden="true" />
        <Icon
          name="xmark"
          class="hamburger-icon xmark-icon"
          aria-hidden="true"
        />
      </button>
    </div>
  </div>
</header>
