---
import Social from "../ui/Social.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const { github, email, githubIconName, emailIconName } = staticData.data;
---

<footer
  class="relative bottom-0 w-full px-4 py-8 font-medium text-blacktext dark:bg-transparent dark:border-b-2 dark:border-zinc-800 dark:text-zinc-300 max-lg:mt-3"
  role="contentinfo"
  aria-label="Site footer"
>
  <nav
    class="mx-auto flex max-w-7xl flex-row items-center justify-between gap-4 text-xl max-xl:px-6 max-sm:flex-col"
    aria-label="Footer navigation"
  >
    <div class="relative h-6 cursor-pointer hover:text-mint-500 transition-all">
      <a
        href="/"
        aria-label="Return to Collective Social homepage"
        class="flex items-center gap-2"
      >
        <Icon
          name="basket"
          class="w-6 h-6 text-mint-500 dark:invert"
          aria-hidden="true"
        />
        <span class="text-mint-500 dark:text-white font-bold text-xl"
          >Collective</span
        >
      </a>
    </div>
    <div class="text-center">
      <p class="text-sm text-blacktext/60 dark:text-gray-500">
        &copy; {new Date().getFullYear()} Collective Social &middot;
        <a
          href="mailto:brittany@balancedengineer.com"
          class="hover:text-mint-500 transition-all underline"
        >
          brittany@balancedengineer.com
        </a>
      </p>
    </div>
    <div
      class="flex items-center justify-center gap-5"
      role="group"
      aria-label="Social media and contact links"
    >
      <Social
        link={`mailto:${email}`}
        iconName={emailIconName}
        label="Send email to brittany@balancedengineer.com"
      />
      <Social
        link={github}
        iconName={githubIconName}
        label="Visit Collective Social on GitHub"
      />
    </div>
  </nav>
</footer>
