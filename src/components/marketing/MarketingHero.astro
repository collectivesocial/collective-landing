---
import { Icon } from "astro-icon/components";
const collectiveLoginUrl = import.meta.env.PUBLIC_LOGIN_URL;
---

<section
  class="scroll-m-16 px-8 max-sm:px-4 py-12 md:py-20"
  id="home"
  aria-label="Collective Social introduction"
>
  <div class="mx-auto max-w-7xl">
    <div
      class="rounded-2xl bg-linear-to-r from-mint-300 dark:from-mint-600 to-mint-50 dark:to-mint-200/5 p-[.2rem]"
    >
      <div
        class="group relative z-0 flex flex-col md:flex-row items-center gap-8 overflow-hidden rounded-2xl bg-linear-to-tr from-riptide-100 to-white p-8 md:p-12 lg:p-16 transition-all hover:shadow-[0_10px_50px_rgba(13,188,130,0.2)] dark:bg-linear-to-r dark:from-mint-950 dark:to-zinc-950 dark:before:bg-[radial-gradient(circle,rgba(13,188,130)_0,rgba(1,45,34)_100%)] before:bg-[radial-gradient(circle,rgba(95,255,202)_0,rgba(144,253,210)_100%)] before:absolute before:right-20 before:top-10 before:h-[40%] before:aspect-square before:rounded-full before:blur-3xl before:opacity-80 before:-z-10 before:transition hover:before:animate-pulse"
      >
        <div class="flex flex-col gap-6 md:w-7/12">
          <span
            class="relative inline-flex items-center text-xs font-semibold dark:text-white text-blacktext w-fit"
          >
            <span
              class="before:mr-2 before:block before:h-1.5 before:w-1.5 before:rounded-full before:bg-green-400 before:shadow-[0px_0px_0px_3px_rgba(34,197,94,0.5)] before:animate-pulse before:content-['']"
            ></span>
            Coming Soon
          </span>

          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-black leading-tight text-blacktext dark:text-white"
          >
            Track what you love.
            <br />
            <span
              class="bg-linear-to-r from-riptide-500 to-mint-500 bg-clip-text text-transparent dark:from-riptide-300 dark:to-mint-200"
            >
              Share what matters.
            </span>
          </h1>

          <p
            class="text-lg md:text-xl font-medium leading-8 text-blacktext/80 dark:text-gray-300 max-w-xl"
          >
            Collective Social is your personal space to curate lists, track your
            progress, and share recommendations across books, movies, TV shows,
            and more&mdash;all built on the open social web.
          </p>

          <div class="flex gap-4 flex-wrap">
            <a
              href={collectiveLoginUrl}
              class="z-2 text-center cursor-pointer leading-none hover:scale-110 w-fit font-bold flex gap-2 transition-all ease-in-out justify-center items-center rounded-full bg-linear-to-r from-riptide-500 to-mint-500 text-white px-8 py-4 text-lg hover:shadow-[0_10px_30px_rgba(13,188,130,0.4)]"
              aria-label="Sign in and start using Collective Social"
            >
              <Icon name="rocket" class="w-5 h-5" aria-hidden="true" />
              Get Started
            </a>
            <a
              href="#features"
              class="z-2 text-center cursor-pointer leading-none hover:scale-110 w-fit font-bold flex gap-2 transition-all ease-in-out justify-center items-center rounded-full border-2 border-mint-500 dark:border-mint-400 text-mint-600 dark:text-mint-300 px-8 py-4 text-lg hover:bg-mint-500/10"
              aria-label="Explore features of Collective Social"
            >
              Learn More
            </a>
          </div>
        </div>

        <div class="md:w-5/12 flex justify-center">
          <img
            class="relative z-0 w-full max-w-md rounded-xl shadow-2xl transition-all duration-500 group-hover:scale-105 group-hover:rotate-1"
            src="/images/screenshots.webp"
            alt="Collective Social app interface showing collections and media tracking"
            loading="eager"
            width="480"
            height="320"
          />
        </div>
      </div>
    </div>
  </div>
</section>
