---
import { Icon } from "astro-icon/components";
import Heading from "../ui/Heading.astro";
---

<section
  class="scroll-m-16 px-8 max-sm:px-4 py-16"
  id="open-source"
  aria-label="Open source information for Collective Social"
>
  <div class="mx-auto max-w-7xl">
    <div
      class="rounded-2xl bg-linear-to-r from-mint-300 dark:from-mint-600 to-mint-50 dark:to-mint-200/5 p-[.2rem]"
    >
      <div
        class="group relative z-0 flex flex-col md:flex-row items-center gap-8 overflow-hidden rounded-2xl bg-linear-to-tr from-riptide-100 to-white p-8 md:p-12 transition-all hover:shadow-[0_10px_50px_rgba(13,188,130,0.2)] dark:bg-linear-to-r dark:from-mint-950 dark:to-zinc-950 dark:before:bg-[radial-gradient(circle,rgba(13,188,130)_0,rgba(1,45,34)_100%)] before:bg-[radial-gradient(circle,rgba(95,255,202)_0,rgba(144,253,210)_100%)] before:absolute before:left-20 before:bottom-0 before:h-[40%] before:aspect-square before:rounded-full before:blur-3xl before:opacity-60 before:-z-10 before:transition hover:before:animate-pulse"
      >
        <div class="md:w-7/12 flex flex-col gap-4">
          <Heading
            text="Open source &"
            textGradient="community driven."
            level={2}
          />
          <p
            class="text-lg text-blacktext/70 dark:text-gray-400 leading-relaxed max-w-xl"
          >
            Collective Social is fully open source. We believe in transparency,
            community ownership, and building in the open. Check out the code,
            file issues, or contribute new features.
          </p>
          <div class="flex gap-4 flex-wrap mt-2">
            <a
              href="https://github.com/collectivesocial"
              target="_blank"
              rel="noopener noreferrer"
              class="z-2 text-center cursor-pointer leading-none hover:scale-110 w-fit font-bold flex gap-2 transition-all ease-in-out justify-center items-center rounded-full border-2 border-mint-500 dark:border-mint-400 text-mint-600 dark:text-mint-300 px-6 py-3 text-base hover:bg-mint-500/10"
              aria-label="Visit the Collective Social GitHub organization"
            >
              <Icon name="github" class="w-5 h-5" aria-hidden="true" />
              View on GitHub
            </a>
          </div>
        </div>
        <div class="md:w-5/12 flex justify-center">
          <Icon
            name="github"
            class="w-40 h-40 md:w-56 md:h-56 text-mint-500/20 group-hover:text-mint-500/30 transition-all duration-500 group-hover:scale-110"
            aria-hidden="true"
          />
        </div>
      </div>
    </div>
  </div>
</section>
