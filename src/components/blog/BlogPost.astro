---
const { title, url, date, image, tags = [] } = Astro.props;

import Tag from "../ui/Tag.astro";
import ReadMore from "../ui/ReadMore.astro";
import DatePub from "./DatePub.astro";

---

<article class="bg-white dark:bg-sand-950/25 dark:border dark:border-sand-800 dark:hover:border-copper-400 hover:backdrop-blur-none backdrop-blur-lg shadow-sm overflow-auto hover:shadow-[5px_5px_rgba(140,70,40,0.4),10px_10px_rgba(140,70,40,0.3),15px_15px_rgba(140,70,40,0.2),20px_20px_rgba(140,70,40,0.1),25px_25px_rgba(140,70,40,0.05)] p-8 max-md:p-6 w-full flex justify-between items-center bg-linear-to-r hover:from-copper-100 hover:to-sand-100 dark:hover:from-copper-500 dark:hover:to-copper-600 transition-all hover:scale-105  duration-200 ease-in-out gap-8 max-md:gap-4 rounded-3xl max-md:flex-col-reverse">
    <div class="flex flex-col">
        <a href={url} class="flex flex-col gap-4 w-full">
            <DatePub date={date} />
            <h2 class="dark:text-sand-100 text-blacktext text-3xl font-bold text-pretty">{title}</h2>
            <ReadMore />
        </a>
        <div class="gap-3 mt-3 flex flex-col">
            <div class="gap-2 flex flex-wrap justify-start items-center">
                {tags.length > 0 && tags.map((tag: string) => <Tag tag={tag}>{tag}</Tag>)}
            </div>
        </div>
    </div>
    {image?.url && (
        <a href={url} style={{ backgroundImage: `url(${image.url})` }} class="shrink-0 rounded-2xl bg-center bg-cover aspect-video max-md:aspect-video w-2/6 max-md:w-full" />
    )}
</article>
