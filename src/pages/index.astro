---
import Layout from "../layouts/Layout.astro";
import MarketingHero from "../components/marketing/MarketingHero.astro";
import FeatureShowcase from "../components/marketing/FeatureShowcase.astro";
import GettingStartedSteps from "../components/marketing/GettingStartedSteps.astro";
import OpenSourceBanner from "../components/marketing/OpenSourceBanner.astro";
import ContactCTA from "../components/marketing/ContactCTA.astro";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const { pageTitle, pageDescription, OGImage } = staticData.data;
---

<Layout
  pageTitle={pageTitle}
  description={pageDescription}
  ogimage={{ alt: OGImage.alt, url: OGImage.url }}
>
  <MarketingHero />
  <FeatureShowcase />
  <GettingStartedSteps />
  <OpenSourceBanner />
  <ContactCTA />
</Layout>
